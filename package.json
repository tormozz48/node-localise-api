{
  "name": "node-lokalise-api",
  "version": "0.1.0",
  "description": "Lokalise API",
  "keywords": [
    "Lokalise",
    "API",
    "node",
    "library",
    "TypeScript",
    "Client"
  ],
  "author": "Andrey Kuznetsov",
  "repository": "tormozz48/node-lokalise-api",
  "license": "Apache-2.0",
  "private": false,
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "docs"
  ],
  "scripts": {
    "build": "npm run clean-build && tsc",
    "docs": "node_modules/.bin/typedoc --target ES6 --out ./docs ./src --exclude ./test/**/*.ts --name node-lokalise-api --mode file",
    "clean-build": "rm -rf build",
    "clean-coverage": "rm -rf coverage",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "check": "npm outdated",
    "pretest": "npm run lint && npm run build",
    "test": "mocha --opts mocha.opts",
    "cover": "istanbul cover ./node_modules/mocha/bin/_mocha -- --opts mocha.opts",
    "precommit": "npm run lint",
    "prepush": "npm test",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/circular-json": "^0.4.0",
    "@types/mocha": "^5.2.5",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.12.5",
    "@types/semver": "^5.4.0",
    "chai": "^4.1.7",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.0",
    "husky": "^1.1.3",
    "install": "^0.12.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nock": "^10.0.2",
    "npm": "^6.4.1",
    "remap-istanbul": "^0.12.0",
    "sinon": "^7.1.1",
    "tslint": "^5.7.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "got": "^9.3.2"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
